@{
    ViewBag.Title = "Index";
}

<form asp-action="Index" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div>
        <label for="clientAddress">Адреса клієнта:</label>
        <input type="text" id="clientAddress" name="clientAddress" />
    </div>

    <div>
        <label for="money">Заробіток за годину:</label>
        <input type="number" id="money" name="money" step="0.01" />
    </div>

    <div>
        <label for="workDuration">Тривалість Роботи:</label>
        <input type="number" id="workDuration" name="workDuration" min="0" step="1" />
    </div>

    <div>
        <label for="сommission">Комісія за годину роботи (Не обов'язково):</label>
        <input type="number" id="сommission" name="сommission" step="0.01" />
    </div>

    <div>
        <label for="date">Дата:</label>
        <input type="date" id="date" name="date" />
    </div>

    <div>
        <input type="submit" value="Відправити" />
        @if (ViewBag.Errors != null)
        {
            <div class="text-red ml">
                <ul>
                    @foreach (string error in ViewBag.Errors)
                    {
                        <li class="ml">@error</li>
                    }
                </ul>
            </div>
        }
        <div class="text-green">@ViewBag.Message</div>
    </div>
</form>