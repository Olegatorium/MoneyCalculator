@model DateRange
@{
    ViewBag.Title = "Get Calculated Results";
}

<div class="container">
    <h2>Вибір дати для розрахунку</h2>

    <div class="page-content">
        <form asp-action="GetCalculatedResults" method="post">
            <div>
                <label>Початкова дата:</label>
                <input type="date" asp-for="StartDate" class="form-control" />
            </div>
            <div>
                <label>Кінцева дата:</label>
                <input type="date" asp-for="EndDate" class="form-control" />
            </div>
            <input type="submit" value="Показати результати" />
        </form>

        @if (ViewBag.Error != null)
        {
            <p class="text-red">@ViewBag.Error</p>
        }
        else if (Model.Results != null)
        {
            <div class="results-container">
                <h3>Результати:</h3>
                <ul>
                    <li>Загальна сума: <span>@Model.Results.TotalAmount</span></li>
                    <li>Комісія: <span>@Model.Results.Commission</span></li>
                    <li>Чисті: <span>@Model.Results.NetAmount</span></li>
                </ul>
            </div>
        }
        else if (Model.Results == null)
        {
            <p class="text-red">Немає результатів за обраний період.</p>
        }
    </div>
</div>
